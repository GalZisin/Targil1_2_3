<Window x:Class="_210819_slider_Textbox.Targil1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_210819_slider_Textbox"
        mc:Ignorable="d"
        Title="Targil1" Height="450" Width="800">
    <Grid>
        <TextBlock Name="myTextBlock" TextAlignment="Center"  FontSize="{Binding ElementName=slider, Path=Value}" Text="{Binding ElementName=myTextBox, Path=Text}" HorizontalAlignment="Left" Margin="142,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" Height="87"/>
        <TextBox Name="myTextBox"  HorizontalAlignment="Left" Height="23" Margin="142,290,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Slider HorizontalAlignment="Left" Minimum="0" Maximum="50" Name="slider"  Margin="96,72,0,0" VerticalAlignment="Top" Width="184"/>
    </Grid>
</Window>
